{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Photo</h1>

    <img src="{{ asset(uploadLocation) }}" />

    <p>UPLOAD {{ uploadLocation }}</p>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.path }}</td>
            </tr>
             <tr>
                <th>latitude</th>
                <td>{{ entity.latitude }}</td>
            </tr>
             <tr>
                <th>longitude</th>
                <td>{{ entity.longitude }}</td>
            </tr>
            <tr>
                <th>Uploaddate</th>
                <td>{{ entity.uploadDate }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ entity.viewCount }}</td>
            </tr>

            <tr>
                {% if tags is not empty %}
                <th>Tags</th>
                <td>{{ tags }}</td>
                {% else %}
                <th>This photo has no tags</th>
                {% endif %}
            </tr>

        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('photo') }}">
            Back to the list
        </a>
    </li>


</ul>
{% endblock %}
